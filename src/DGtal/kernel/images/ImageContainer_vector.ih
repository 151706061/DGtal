///////////////////////////////////////////////////////////////////////////////
// IMPLEMENTATION of inline methods.
///////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////////
#include <cstdlib>
//////////////////////////////////////////////////////////////////////////////

template <typename TPoint, typename T>
inline
ImageContainer_vector<TPoint,T>::ImageContainer_vector(const TPoint &aPointA,
        const TPoint &aPointB )
{
    if (aPointA < aPointB)
    {
        myLowerBound = aPointA;
        myUpperBound = aPointB;
    }
    else
    {
        myLowerBound = aPointB;
        myUpperBound = aPointA;
    }
}

template <typename TPoint, typename T>
inline
ImageContainer_vector<TPoint,T>::~ImageContainer_vector( )
{
}


template <typename TPoint, typename T>
inline
T
ImageContainer_vector<TPoint,T>::operator()(const TPoint &aPoint)
{
    return this->at( linearized( aPoint ) );

}

template <typename TPoint, typename T>
inline
void
ImageContainer_vector<TPoint,T>::setValue(const TPoint &aPoint, const T &V)
{
  this->at( linearized( aPoint ) ) = V;
}



///////////////////////////////////////////////////////////////////////////////
// Internals - private :
template<typename TPoint, typename T>
inline
typename ImageContainer_vector<TPoint,T>::TSizeType
ImageContainer_vector<TPoint,T>::linearized(const TPoint &aPoint) const
{
    TSizeType pos = aPoint.at( 0 )- this->myLowerBound.at( 0 ) ;
    TSizeType multiplier = 1;

    for (unsigned int k = 1 ; k < TPoint::Dimension ; k++)
    {
        multiplier *= (this->myUpperBound.at( k-1 ) - this->myLowerBound.at ( k-1 ));
        pos += multiplier * ( aPoint.at( k ) - this->myLowerBound.at( k ) );
    }

    return pos;
}

